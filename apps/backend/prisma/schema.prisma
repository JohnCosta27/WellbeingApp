generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(uuid())
  email String @unique
  password String
  password_salt String
  mental_energy MentalEnergy[]
  how_am_i_words UserHowAmIWords[]
}

model MentalEnergy {
  id String @id @default(uuid())
  level Float
  date DateTime @default(now())

  user_id String
  user Users @relation(fields: [user_id], references: [id])
}

model HowAmIWords {
  id String @id @default(uuid())
  word String

  user_words UserHowAmIWords[]
}

model UserHowAmIWords {
  id String @id @default(uuid())
  date_added DateTime @default(now())

  how_am_i_word_id String
  user_id String
  word HowAmIWords @relation(fields: [how_am_i_word_id], references: [id])
  user Users @relation(fields: [user_id], references: [id])
}
