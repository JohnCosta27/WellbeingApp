generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(uuid())
  email String @unique
  password String
  password_salt String
  mental_energy MentalEnergy[]
  how_am_i_phrases UserHowAmIPhrase[]
  brands Brand[]
  user_modules UserModules[]
}

model MentalEnergy {
  id String @id @default(uuid())
  level Float
  date DateTime @default(now())

  user_id String
  user Users @relation(fields: [user_id], references: [id])
}

model HowAmIPhrase {
  id String @id @default(uuid())
  phrase String

  user_phrases UserHowAmIPhrase[]
}

model UserHowAmIPhrase {
  id String @id @default(uuid())
  date_added DateTime @default(now())

  how_am_i_phrase_id String
  user_id String
  phrase HowAmIPhrase @relation(fields: [how_am_i_phrase_id], references: [id])
  user Users @relation(fields: [user_id], references: [id])
}

model BrandWords {
  id String @id @default(uuid())
  word String

  brandWordEntries BrandWordEntry[]
}

model BrandWordEntry {
  id String @id @default(uuid())
  date_added DateTime @default(now())

  brand_word_id String
  brand_word BrandWords @relation(fields: [brand_word_id], references: [id])
  
  brand_id String
  brand Brand @relation(fields: [brand_id], references: [id])
}

model Brand {
  id String @id @default(uuid())
  date_saved DateTime?
  name String

  brand_word_entries BrandWordEntry[]

  user_id String
  user Users @relation(fields: [user_id], references: [id])
}

model Modules {
  id String @id @default(uuid())
  name String
  year String

  user_modules UserModules[]
}

model Assignments {
  id String @id @default(uuid())
  name String
  date DateTime @default(now())
  score Float
  percent Float

  user_module_id String
  user_module UserModules @relation(fields: [user_module_id], references: [id])
}

model UserModules {
  id String @id @default(uuid())
  user_id String
  module_id String
  assignments Assignments[]

  user Users @relation(fields: [user_id], references: [id])
  module Modules @relation(fields: [module_id], references: [id])
}
