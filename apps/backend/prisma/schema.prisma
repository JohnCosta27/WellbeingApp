generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(uuid())
  email String @unique
  password String
  password_salt String
  mental_energy MentalEnergy[]
  how_am_i_words UserHowAmIPhrase[]
}

model MentalEnergy {
  id String @id @default(uuid())
  level Float
  date DateTime @default(now())

  user_id String
  user Users @relation(fields: [user_id], references: [id])
}

model HowAmIPhrase {
  id String @id @default(uuid())
  phrase String

  user_phrases UserHowAmIPhrase[]
}

model UserHowAmIPhrase {
  id String @id @default(uuid())
  date_added DateTime @default(now())

  how_am_i_phrase_id String
  user_id String
  phrase HowAmIPhrase @relation(fields: [how_am_i_phrase_id], references: [id])
  user Users @relation(fields: [user_id], references: [id])
}
